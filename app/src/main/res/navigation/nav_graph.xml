<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authChoiceFragment">

    <action
        android:id="@+id/action_global_courseListFragment"
        app:destination="@id/courseListFragment"
        app:popUpTo="@id/nav_graph"
        app:popUpToInclusive="true" />

    <!-- Auth -->
    <fragment
        android:id="@+id/authChoiceFragment"
        android:name="com.example.network_base.ui.auth.AuthChoiceFragment"
        android:label="Авторизация"
        tools:layout="@layout/fragment_auth_choice">

        <action
            android:id="@+id/action_authChoiceFragment_to_loginFragment"
            app:destination="@id/loginFragment" />

        <action
            android:id="@+id/action_authChoiceFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.network_base.ui.auth.LoginFragment"
        android:label="Вход"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />

        <action
            android:id="@+id/action_loginFragment_to_adminPanelFragment"
            app:destination="@id/adminPanelFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.network_base.ui.auth.RegisterFragment"
        android:label="Регистрация"
        tools:layout="@layout/fragment_register">

        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <!-- Course List -->
    <fragment
        android:id="@+id/courseListFragment"
        android:name="com.example.network_base.ui.course.CourseListFragment"
        android:label="Курс"
        tools:layout="@layout/fragment_course_list">
        
        <action
            android:id="@+id/action_courseList_to_moduleDetail"
            app:destination="@id/moduleDetailFragment" />
    </fragment>

    <!-- Module Detail -->
    <fragment
        android:id="@+id/moduleDetailFragment"
        android:name="com.example.network_base.ui.course.ModuleDetailFragment"
        android:label="Модуль"
        tools:layout="@layout/fragment_module_detail">
        
        <argument
            android:name="moduleId"
            app:argType="string" />
            
        <action
            android:id="@+id/action_moduleDetail_to_lesson"
            app:destination="@id/lessonFragment" />
            
        <action
            android:id="@+id/action_moduleDetail_to_task"
            app:destination="@id/taskFragment" />
    </fragment>

    <!-- Lesson -->
    <fragment
        android:id="@+id/lessonFragment"
        android:name="com.example.network_base.ui.course.LessonFragment"
        android:label="Урок"
        tools:layout="@layout/fragment_lesson">
        
        <argument
            android:name="lessonId"
            app:argType="string" />
    </fragment>

    <!-- Task -->
    <fragment
        android:id="@+id/taskFragment"
        android:name="com.example.network_base.ui.course.TaskFragment"
        android:label="Задание"
        tools:layout="@layout/fragment_task">
        
        <argument
            android:name="taskId"
            app:argType="string" />
    </fragment>

    <!-- Sandbox -->
    <fragment
        android:id="@+id/sandboxFragment"
        android:name="com.example.network_base.ui.sandbox.SandboxFragment"
        android:label="Песочница"
        tools:layout="@layout/fragment_sandbox" />

    <!-- Profile -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.network_base.ui.profile.ProfileFragment"
        android:label="Профиль"
        tools:layout="@layout/fragment_profile">

        <action
            android:id="@+id/action_profileFragment_to_adminPanelFragment"
            app:destination="@id/adminPanelFragment" />
    </fragment>

    <!-- Admin -->
    <fragment
        android:id="@+id/adminPanelFragment"
        android:name="com.example.network_base.ui.admin.AdminPanelFragment"
        android:label="Админ"
        tools:layout="@layout/fragment_admin_panel">


        <action
            android:id="@+id/action_adminPanelFragment_to_usersManagementFragment"
            app:destination="@id/usersManagementFragment" />
        <action
            android:id="@+id/action_adminPanelFragment_to_modulesManagementFragment"
            app:destination="@id/modulesManagementFragment" />
        <action
            android:id="@+id/action_adminPanelFragment_to_lessonManagementFragment"
            app:destination="@id/lessonManagementFragment" />
        <action
            android:id="@+id/action_adminPanelFragment_to_theoryManagementFragment"
            app:destination="@id/theoryManagementFragment" />
        <action
            android:id="@+id/action_adminPanelFragment_to_roleManagementFragment"
            app:destination="@id/roleManagementFragment" />

        <action
            android:id="@+id/action_adminPanelFragment_to_taskManagementFragment"
            app:destination="@id/taskManagementFragment" />
    </fragment>

    <fragment
        android:id="@+id/taskManagementFragment"
        android:name="com.example.network_base.ui.admin.TaskManagementFragment"
        android:label="Управление задачами"
        tools:layout="@layout/fragment_task_management">
        <argument
            android:name="lessonId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/roleManagementFragment"
        android:name="com.example.network_base.ui.admin.RoleManagementFragment"
        android:label="Управление ролями"
        tools:layout="@layout/fragment_role_management">
        <action
            android:id="@+id/action_roleManagementFragment_to_adminPanelFragment"
            app:destination="@id/adminPanelFragment" />
    </fragment>

    <fragment
        android:id="@+id/userProfileFragment"
        android:name="com.example.network_base.ui.profile.UserProfileFragment"
        android:label="Профиль"
        tools:layout="@layout/fragment_user_profile">
        <action
            android:id="@+id/action_userProfileFragment_to_adminPanelFragment"
            app:destination="@id/adminPanelFragment" />
    </fragment>

    <fragment
        android:id="@+id/modulesManagementFragment"
        android:name="com.example.network_base.ui.admin.ModuleManagementFragment"
        android:label="Управление модулями"
        tools:layout="@layout/fragment_module_management">
        <action
            android:id="@+id/action_modulesManagementFragment_to_lessonManagementFragment"
            app:destination="@id/lessonManagementFragment">
            <argument
                android:name="moduleId"
                app:argType="string" />
        </action>
    </fragment>





    <fragment
        android:id="@+id/usersManagementFragment"
        android:name="com.example.network_base.ui.admin.UsersManagementFragment"
        android:label="Управление пользователями"
        tools:layout="@layout/fragment_users_management" />

    <fragment
        android:id="@+id/theoryManagementFragment"
        android:name="com.example.network_base.ui.admin.TheoryManagementFragment"
        android:label="Управление теорией"
        tools:layout="@layout/fragment_theory_management" />

    <fragment
        android:id="@+id/lessonManagementFragment"
        android:name="com.example.network_base.ui.admin.LessonManagementFragment"
        android:label="Управление уроками"
        tools:layout="@layout/fragment_lesson_management">
        <argument
            android:name="moduleId"
            app:argType="string" />
    </fragment>

</navigation>

